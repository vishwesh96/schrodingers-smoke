	</shape>

	<shape type="sphere">
		<point name="center" x="6.0" y="2.5" z="2.5"/>
		<float name="radius" value=".5"/>
		<bsdf type="diffuse">
			<rgb name="diffuseReflectance" value=".2 .2 .2"/>
		</bsdf>
	</shape>

	<sensor type="perspective">
		<float name="focusDistance" value="2.25668"/>
		<float name="fov" value="60.8402"/>
		<string name="fovAxis" value="y"/>
		<transform name="toWorld">

			<lookat target="5.0,2.5,0.0" origin="5.0, 2.5, 10.0" up="0.0,-1.0,0.0"/>
		</transform>
		<sampler type="ldsampler">
			<integer name="sampleCount" value="256"/>
		</sampler>

		<film type="hdrfilm">
			<integer name="height" value="576"/>
			<integer name="width" value="768"/>

			<rfilter type="gaussian"/>
		</film>
	</sensor>
 
	<shape type="sphere">
		<point name="center" x="6.0" y="2.5" z="10.0"/>
		<float name="radius" value=".2"/>

		<emitter type="area">
			<spectrum name="radiance" value="1400"/>
		</emitter>
	</shape>

	<shape type="sphere">
		<point name="center" x="4.0" y="2.5" z="10.0"/>
		<float name="radius" value=".2"/>

		<emitter type="area">
			<spectrum name="radiance" value="1400"/>
		</emitter>
	</shape>
</scene>
